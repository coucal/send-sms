<h1>Recipients</h1>

{{#if responseMessage}}
  <div class="alert alert-success">{{responseMessage}}</div>
{{/if}}

<form>
  <label>NAME:</label>
    {{input value=newRecipientName}}
  <label>FIRST NAME:</label>
      {{input value=newRecipientFirstName}}
  <label>PHONE:</label>
      {{input value=newRecipientPhone }}
  <button type="submit" {{action 'addNewRecipient' newRecipientId newRecipientName newRecipientFirstName newRecipientPhone}}>Add</button>
</form>

<ul>
  {{#each model as |recipient|}}
    <li>ID: {{recipient.id}}, NAME: {{recipient.name}}, FIRST NAME: {{recipient.firstName}}, PHONE: {{recipient.phone}}
    <button {{action 'deleteRecipient' recipient}}>Del</button>
    </li>
  {{/each}}
</ul>

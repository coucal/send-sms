<h2>Lists</h2>



<div class="row">
  {{#each model as |list|}}
    <div class="col-md-4">
      {{#recipient-item item=list badge=list.recipients.length}}
        {{#link-to 'recipients.bylist' list.id class='btn btn-info btn-xs'}}Select{{/link-to}}
        {{#link-to 'lists.edit' list.id class='btn btn-success btn-xs'}}Edit{{/link-to}}
        <button class="btn btn-danger btn-xs" {{action 'deleteList' list}}>Delete</button>
      {{/recipient-item}}
    </div>
  {{else}}
    {{#if model.isUpdating}}
      {{spinner-cube}}
    {{else}}
      <div class="col-md-12 text-center">
        <div class="alert alert-info">
          Sorry, no result.
        </div>
      </div>
    {{/if}}
  {{/each}}
</div>

<div class="panel panel-default recipient-item">
    <div class="panel-heading">
        <h3 class="panel-title">{{item.name}} {{item.firstName}} <span class="pull-right">({{item.list.name}})</span></h3>
    </div>
    <div class="panel-body">
        <p>Name : {{item.name}}</p>
        <p>First name : {{item.firstName}}</p>
        Phone : {{item.phone}}
    </div>
    <div class="panel-footer">
      &nbsp;
      <span class="pull-right">
        {{yield}}
      </span>
    </div>
</div>
